@model IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="our_section layout_padding">
    <div class="container" style="min-height:600px;">
        <div class="row padding_top_0">
            @foreach (var group in Model.Groups)
            {
                <div class="col-md-3">
                    <a asp-controller="Gallary" asp-action="Photos" asp-route-id="@group.ID">
                        <div class="image_7"><img src="/images/images/@group.Images.FirstOrDefault().photo" class="img-circle img-fluid" style="width:100%;height:150px; object-fit:contain;"></div>
                        <h4 class="design_text">@group.Name</h4>
                    </a>
                </div>
            }
        </div>

    </div>
</div>