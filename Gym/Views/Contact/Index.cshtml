@model IndexViewModel
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<!-- contact section start -->
<div class="about_section_2 layout_padding">
    <div class="container">
        <h1 class="contact_text_2"><strong>CONTACT US</strong></h1>
        <p class="client_long_text">Please feel free to contact us</p>
    </div>
</div>
<div class="contact_section ">
    <div class="row">
        <div class="col-md-6 background_bg">
            <div class="contact_bg">
                <div class="input_main">
                    <div class="container">
                        <h2 class="request_text">REQUEST A CALL BACK</h2>
                        <form asp-controller="Contact" asp-action="Index" method="post">
                            <div class="form-group">
                                <input type="text" asp-for="Name" class="email-bt" placeholder="Your Name" name="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Email" class="email-bt" placeholder="Email" name="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Phone" class="email-bt" placeholder="Phone" name="Phone">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <textarea asp-for="Message" class="massage-bt" placeholder="Massage" rows="5" id="comment" name="Message"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <input type="submit" value="Send" class="send_bt" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="map-responsive">
                <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&q=Eiffel+Tower+Paris+France" width="600" height="560" frameborder="0" style="border:0; width: 100%;" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>
<!-- contact section end -->
<partial name="_Validation" />