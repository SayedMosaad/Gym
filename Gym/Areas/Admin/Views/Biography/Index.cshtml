@model IEnumerable<BiographyReadDTO>

@{
    ViewData["Title"] = "Biography";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}
@foreach (var profile in Model)
{
    if (i == 0)
    {
        <div class="row">
            <div class="card col-md-12">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-2">
                            Profile Details
                        </div>

                        <div class="col-md-6">
                            <img src="data:image\/*;base64,@(Convert.ToBase64String(profile.Image))" alt="Poster Image" class="img-thumbnail img-fluid" style="width:200px; height:250px; object-fit:cover" />
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    
                    <strong>
                        <i class="fas fa-editbook"></i>
                        About Us
                    </strong>
                    <p>@profile.About</p>
                    <hr />
                    <strong>
                        <i class="fas fa-editbook"></i>
                        Address
                    </strong>
                    <p>@profile.Address</p>
                    <hr />
                    <strong>
                        <i class="fas fa-editbook"></i>
                        Email
                    </strong>
                    <p>@profile.Email</p>
                    <hr />
                    <strong>
                        <i class="fas fa-editbook"></i>
                        Mobile
                    </strong>
                    <p>@profile.Mobile</p>
                    <hr />
                </div>
                <div class="card-footer">
                    <a asp-controller="Biography" asp-area="Admin" asp-action="Edit" asp-route-id="@profile.ID" class="btn btn-primary">Edit Information</a>
                </div>
            </div>
        </div>
    }
}
